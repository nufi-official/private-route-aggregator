{
  "name": "@privacy-router-sdk/solana-ledger",
  "version": "0.1.0",
  "description": "Solana Ledger hardware wallet signer for privacy transactions",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
