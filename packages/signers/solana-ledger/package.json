    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@privacy-router-sdk/signers-core": "workspace:*",
    "@ledgerhq/hw-transport-webhid": "^6.29.4",
    "@ledgerhq/hw-app-solana": "^7.2.4",
    "@solana/web3.js": "^1.95.8"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.7.2"
  }
