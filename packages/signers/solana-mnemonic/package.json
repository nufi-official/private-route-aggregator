{
  "name": "@privacy-router-sdk/solana-mnemonic",
  "version": "0.1.0",
  "description": "Solana mnemonic-based signer for privacy router",
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run typecheck && pnpm run test && pnpm run build"
  },
  "keywords": [
    "solana",
    "mnemonic",
    "signer",
    "privacy",
    "typescript"
  ],
  "dependencies": {
    "@privacy-router-sdk/signers-core": "workspace:*",
    "@solana/web3.js": "^1.95.8",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "tweetnacl": "^1.0.3"
  }
}
